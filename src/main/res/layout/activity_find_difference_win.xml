<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Game_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FindDifferenceWin">

    <ImageView
        android:id="@+id/panel_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:forceHasOverlappingRendering="false"
        app:srcCompat="@drawable/panel_window" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/panel_window"
        android:orientation="vertical"
        android:layout_marginTop="2dp">

        <TextView
            android:id="@+id/level_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="找不同 完成！"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/star_no_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/star_unactive" />

            <ImageView
                android:id="@+id/star_no_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/star_unactive" />

            <ImageView
                android:id="@+id/star_no_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/star_unactive" />

        </LinearLayout>

        <TextView
            android:id="@+id/score_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分數: 0"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28sp"/>
            
        <TextView
            android:id="@+id/time_left_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="剩餘時間: 0 秒"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <ImageButton
                android:id="@+id/replay_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/replay" />

            <ImageButton
                android:id="@+id/nextlevel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/play" />

            <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/levels" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout> 